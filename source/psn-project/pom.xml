				<type>pom</type>
			</dependency>

			<!-- own shared resources and deployments -->
			<dependency>
				<groupId>org.emau.icmvc.ganimed.ttp</groupId>
				<artifactId>gpas-shared-resources</artifactId>
				<version>${project.version}</version>
				<type>jar</type>
			</dependency>
			<dependency>
				<groupId>org.emau.icmvc.ganimed.ttp</groupId>
				<artifactId>psn-ear</artifactId>
				<version>${project.version}</version>
				<type>ear</type>
			</dependency>
			<dependency>
				<groupId>org.emau.icmvc.ganimed.ttp</groupId>
				<artifactId>psn-web</artifactId>
				<version>${project.version}</version>
				<type>war</type>
			</dependency>

			<!-- external shared resources and deployments -->
			<dependency>
				<groupId>org.emau.icmvc.ttp</groupId>
				<artifactId>noti-shared-resources</artifactId>
				<version>${ttp-noti.version}</version>
				<type>jar</type>
			</dependency>
			<dependency>
				<groupId>org.emau.icmvc.ttp</groupId>
