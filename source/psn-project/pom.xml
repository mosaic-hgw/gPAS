<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.emau.icmvc.ganimed.ttp</groupId>
	<artifactId>psn-project</artifactId>
	<version>2023.1.2</version>
	<name>gPAS</name>
	<url>https://www.ths-greifswald.de/gpas</url>

	<packaging>pom</packaging>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<ttp-web-common.version>2.15.5</ttp-web-common.version>
		<ths-utils.version>1.4.11</ths-utils.version>
		<project.shortName>gpas</project.shortName>
		<project.upperName>GPAS</project.upperName>
		<display_version>${project.version}</display_version>
		<log4j.version>2.20.0</log4j.version>
		<ttp-noti.version>2023.1.1</ttp-noti.version>
		<ttp-gras.version>1.0.0</ttp-gras.version>
	</properties>

	<modules>
		<module>psn-commons</module>
		<module>psn-ejb</module>
		<module>psn-ear</module>
		<module>psn-web</module>
		<module>psn-coverage</module>
		<module>psn-docker</module>
	</modules>

	<profiles>
		<profile>
			<id>dev</id>
			<properties>
				<display_version>${project.version} - Build ${maven.build.timestamp}
					UTC
				</display_version>
				<maven.build.timestamp.format>yyyy-MM-dd HH:mm</maven.build.timestamp.format>
				<excludeTests>CheckDigit, Integration</excludeTests>
			</properties>
		</profile>
		<profile>
			<id>demo</id>
			<properties>
				<disclaimer.enable.start>--&gt;</disclaimer.enable.start>
				<disclaimer.enable.end>&lt;!--</disclaimer.enable.end>
				<display_version>${project.version} - Demo</display_version>
				<excludeTests>CheckDigit, Integration</excludeTests>
			</properties>
		</profile>
		<profile>
			<id>prod</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<excludeTests>CheckDigit, Integration</excludeTests>
			</properties>
		</profile>
		<profile>
			<id>secured</id>
			<properties>
				<login.enable.start>--&gt;</login.enable.start>
				<login.enable.end>&lt;!--</login.enable.end>
				<gras-login.enable.start>--&gt;</gras-login.enable.start>
				<gras-login.enable.end>&lt;!--</gras-login.enable.end>
				<excludeTests>CheckDigit, Integration</excludeTests>
			</properties>
		</profile>
		<profile>
			<id>test-all</id>
			<properties>
				<excludeTests>none</excludeTests>
			</properties>
		</profile>
		<profile>
			<id>coverage</id>
			<properties>
				<excludeTests>CheckDigit, Integration</excludeTests>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.jacoco</groupId>
						<artifactId>jacoco-maven-plugin</artifactId>
						<version>0.8.8</version>
						<executions>
							<execution>
								<goals>
									<goal>prepare-agent</goal>
								</goals>
							</execution>
							<execution>
								<id>report</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>report</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<repositories>
		<repository>
			<id>ttp-releases</id>
			<name>Trusted Third Party Maven Repository</name>
			<url>https://nexus.icm.med.uni-greifswald.de/repository/maven-releases-extern</url>
		</repository>
	</repositories>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.emau.icmvc.ganimed.ttp</groupId>
				<artifactId>psn-commons</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.emau.icmvc.ganimed.ttp</groupId>
				<artifactId>psn-ejb</artifactId>
				<version>${project.version}</version>
				<type>ejb</type>
			</dependency>
			<dependency>
				<groupId>com.ibm.icu</groupId>
				<artifactId>icu4j</artifactId>
